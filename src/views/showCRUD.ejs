<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show</title>
    <style>
        table,
        td,
        th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 15px;
        }
    </style>
</head>

<body>

    <table>
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(var i=0; i < dataTable.length; i++) { %>
           <tr>
             <td><%= dataTable[i].email %></td>
             <td><%= dataTable[i].firstName %></td>
             <td><%= dataTable[i].lastName %></td>
             <td><%= dataTable[i].phone %></td>
             <td><%= dataTable[i].address %></td>
             <td>
                <a href="/crud-update?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Update</a>
                <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
             </td>
           </tr>
        <% } %>
        </table>

</body>

</html>
